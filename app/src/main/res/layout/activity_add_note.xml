<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AddNoteActivity">

    <TextView
        android:id="@+id/addNoteHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Add Task"
        android:textColor="@color/red"
        android:textSize="30sp" />
    <ImageView
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_done_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/addNoteHeading"
        android:layout_marginEnd="6dp"/>

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/addNoteHeading"
        android:layout_marginTop="16dp"
        android:background="@drawable/red_border"
        android:fontFamily="@font/poppins"
        android:hint="Enter the title"
        android:maxLines="1"
        android:padding="12dp"
        android:imeOptions="actionNext"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/priorityEditText"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_below="@id/titleEditText"
        android:layout_marginTop="16dp"
        android:background="@drawable/red_border"
        android:fontFamily="@font/poppins"
        android:hint="Enter the priority"
        android:maxLines="1"
        android:maxLength="1"
        android:inputType="number"
        android:imeOptions="actionNext"
        android:padding="12dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/contentEditText"
        android:layout_width="372dp"
        android:layout_height="267dp"
        android:layout_below="@id/priorityEditText"
        android:layout_marginTop="16dp"
        android:background="@drawable/red_border"
        android:fontFamily="@font/poppins"
        android:gravity="top"
        android:hint="Enter the description"
        android:padding="12dp"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="187dp"
        android:layout_height="168dp"
        android:layout_below="@id/contentEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="300dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="84dp"
        app:srcCompat="@drawable/taskadd" />


</RelativeLayout>